<html>
<head>
<title>nuntium<%= ' - ' + account.name if account && account.id -%></title>
<%= stylesheet_link_merged :default %>
<%= javascript_include_merged :default %>
<%= yield :head%>
</head>
<body>
<div id="container">
<%- if @hide_title.nil? -%>
  <div id="header">
    <%= link_to 'Nuntium', root_path, :id => 'title' -%>
    <%- if !flash[:notice].nil? -%>
      <span class="notice"><%= flash[:notice].html_safe -%></span>
    <%- end -%>
    <%- if account && account.id -%>
      <span id="toolbar"><%= account.name -%> |
        <%- if account && account.id && account.alert_emails.blank? -%>
          <%= link_to "configure email alerts", settings_path, {:style => 'color:red'} -%> |
        <%- end -%>
        <%= link_to 'Have a question?', 'http://tech.groups.yahoo.com/group/nuntiumusers/', :target => '_blank' -%> |
        <%= link_to 'Help', 'http://code.google.com/p/nuntium/', :target => '_blank' -%> |
        <%= link_to 'Logoff', session_path, :method => :delete -%></span>
      </div>
      <%= render 'shared/tabs' -%>
    <%- else -%>
      </div>
    <%- end -%>
<%- end -%>
<div id="main">
<%= yield -%>
</div>
<div id="version_separator"></div>
<div id="version">Version: <%= nuntium_version -%></div>
</div>
</body>
</html>
