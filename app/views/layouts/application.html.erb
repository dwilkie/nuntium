<html>
<head>
  <title>nuntium<%= ' - ' + @account.name if !@account.nil? && !@account.id.nil? %></title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag 'jquery-1.3.2' %>
  <%= javascript_include_tag 'application' %>
  <%= yield :head%>
</head>
<body>

<% if @hide_title.nil? %>
  <%= link_to 'Nuntium', {:controller => :home, :action => :index}, :id => 'title' %>
  <% if !@account.nil? && !@account.id.nil? %>
    <span id="toolbar"><%= @account.name %> | <%= link_to 'Help', 'http://code.google.com/p/nuntium/', :target => '_blank' %> | <%= link_to 'Logoff', :controller => :home, :action => :logoff %></span>
    <%= render :partial => 'shared/tabs' %>
  <% end %>
<% end %>

<% if @account && @account.alert_emails.blank? && params[:action].to_sym != :settings %>
    <div id="errorNotice">
    You don't have email alerts configured. <%= link_to "Do this now", :controller => :home, :action => :settings %>
  </div>
<% end %>

<% if !flash[:notice].nil? %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>

<%= yield %>

<div id="version">Version: <%= nuntium_version %></div>

</body>
</html>
