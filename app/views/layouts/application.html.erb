<html>
<head>
  <title>nuntium<%= ' - ' + @application.name if !@application.nil? && !@application.id.nil? %></title>
  <link rel="stylesheet" href="/stylesheets/scaffold.css" type="text/css"/>
  <script src="/javascripts/jquery-1.3.2.js" type="text/javascript"></script>
  <script src="/javascripts/application.js" type="text/javascript"></script>
  <%= yield :head%>
</head>
<body>
<% if @hide_title.nil? %>
  <% if !@application.nil? && !@application.id.nil? %>
    <span id="title">nuntium</span>
    <span id="toolbar"><%= @application.name %> | <%= link_to 'Help', 'http://code.google.com/p/nuntium/', :target => '_blank' %> | <%= link_to 'Logoff', :controller => :home, :action => :logoff %></span>
  <% else %>
    <span id="title">nuntium</span>
  <% end %>
<% end %>
<%= yield %>
<div id="version">Version: <%= nuntium_version %></div>
</body>
</html>
