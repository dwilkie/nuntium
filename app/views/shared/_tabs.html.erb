<ul id="tabs">
  <%-
    #selected_tab = @selected_tab || params[:action].to_sym
    [
      ['Applications', :applications],
      ['Channels', :channels],
      ['AO messages', :ao_messages],
      ['AT messages', :at_messages],
      ['Logs', :logs],
      ['Interactions', :interactions],
      ['Settings', :settings],
      ['Visualizations', :visualizations]
    ].each do |name, action|
    -%>
  <li<%= (params[:controller].to_sym == action ? ' class="selected"' : '').html_safe %>><%= link_to name, eval("#{action}_path") -%></li>
    <%-
  end
  -%>
</ul>
