<%= edit_channel_header %>

<% form_for_channel do |f| %>
  <%= f.error_messages %>
  <%= edit_channel_name f %>
  <%= edit_channel_protocol f %>
  <%= render :partial => 'edit_direction' %>
  <% f.fields_for :configuration do |c| %>
    <p>
    <%= c.label :url %><br/>
    <%= c.text_field :url, :value => @channel[:configuration][:url] %>
    </p>
    <p>
    <%= c.label :user %><br/>
    <%= c.text_field :user, :value => @channel[:configuration][:user] %>
    </p>
    <p>
    <%= c.label :password %><br/>
    <%= c.password_field :password, :value => @channel[:configuration][:password] %>
    </p>
  <% end %>
  <%= render :partial => 'edit_custom_attributes', :locals => {:f => f, :channel => @channel} %>
  <%= channel_submit_tag %>
<% end %>

<%= link_to 'Go back', :controller => :home, :action => :home %>
