<%= edit_channel_header %>

<% form_for_channel do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :direction, :value => Channel::Incoming %>
  <%= edit_channel_name f %>
  <%= edit_channel_protocol f, 'mailto' %>
  <%= render :partial => 'edit_mail_configuration', :locals => {:f => f} %>
  <%= render :partial => 'edit_custom_attributes', :locals => {:f => f} %>
  <%= render :partial => 'edit_at_rules', :locals => {:f => f} %>
  <%= channel_submit_tag %>
<% end %>

<%= link_to 'Go back', :controller => :home, :action => :home %>
