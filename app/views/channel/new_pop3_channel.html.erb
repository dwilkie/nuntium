<%= render :partial => 'edit_channel_header' %>

<% form_for_channel do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :direction, :value => Channel::Incoming %>
  <%= render :partial => 'edit_name', :locals => {:f => f} %>
  <%= render :partial => 'edit_protocol', :locals => {:f => f, :default => 'mailto'} %>
  <%= render :partial => 'edit_priority', :locals => {:f => f} %>
  <%= render :partial => 'edit_mail_configuration', :locals => {:f => f} %>
  <%= render :partial => 'shared/edit_custom_attributes', :locals => {:f => f, :entity => @channel} %>
  <%= render :partial => 'edit_at_rules', :locals => {:f => f} %>
  <%= channel_submit_tag %>
<% end %>

<%= link_to 'Go back', :controller => :home, :action => :home %>
