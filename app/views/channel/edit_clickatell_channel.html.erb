<h4>Edit channel <%= @channel.name %></h4>

<% form_for :channel, :url => { :controller => 'channel', :action => :update_channel } do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :protocol %><br/>
  <%= f.text_field :protocol, :value => 'sms', :readonly => 'readonly' %>
  </p>
  <% f.fields_for :configuration do |c| %>
    <p>
    <%= c.label :user %><br/>
    <%= c.text_field :user, :value => @channel[:configuration][:user] %>
    </p>
    <p>
    <%= c.label :password %><br/>
    <%= c.password_field :password, :value => @channel[:configuration][:password] %>
    </p>
    <p>
    <%= c.label :api_id %><br/>
    <%= c.text_field :api_id, :value => @channel[:configuration][:api_id] %>
    </p>
    <p>
    <%= c.label :from %><br/>
    <%= c.text_field :from, :value => @channel[:configuration][:from]%>
    </p>
    <p>
    <%= c.label :incoming_password %><br/>
    <%= c.password_field :incoming_password, :value => @channel[:configuration][:incoming_password] %>
    </p>
    <p>
    Callback urls (use <a href="http://en.wikipedia.org/wiki/Basic_access_authentication" target="_blank">Basic Http Authentication</a> with channel name and incoming password):<br/>
    <code>/clickatell/<%= @application.name %>/incoming</code><br/>
	<code>/clickatell/<%= @application.id %>/incoming</code>
    </p>
  <% end %>
  <%= submit_tag 'Update channel' %>
<% end %>

<%= link_to 'Go back', :controller => :home, :action => :home %>